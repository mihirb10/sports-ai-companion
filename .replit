modules = ["python-3.11", "postgresql-16"]

[agent]
expertMode = true
integrations = ["github:1.0.0", "youtube:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web-version && python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37875
externalPort = 3000

[[ports]]
localPort = 40355
externalPort = 3002

[[ports]]
localPort = 41355
externalPort = 3001

[[ports]]
localPort = 42769
externalPort = 4200

[[ports]]
localPort = 42869
externalPort = 3003

[[ports]]
localPort = 44681
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--chdir", "web-version", "--bind=0.0.0.0:5000", "app:app"]
